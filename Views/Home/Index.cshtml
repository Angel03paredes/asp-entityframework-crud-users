@model User

@{
    ViewData["Title"] = "Home Page";
    IEnumerable<User> users = ViewData["users"] as IEnumerable<User>;
   
}


    <div>
        <div class="row">
            <div class="col-md-6 p-3">
                <form method="POST">
                    <div class="form-group">
                        <label asp-for="name">Name:</label>
                        <input type="text" asp-for="name" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="email">Email:</label>
                        <input type="email" asp-for="email" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="password">Password:</label>
                        <input type="text" asp-for="password" class="form-control"/>
                    </div>
                    <input class="btn btn-primary" type="submit" value="Save">
                </form>
            </div>
            <div class="col-md-6 p-3">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Password</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in users)
                        {
                            <tr>
                                <td>
                                    @item.name
                                </td>
                                <td>
                                    @item.email
                                </td>
                                <td>
                                    @item.password
                                </td>
                                <td>
                                    <a asp-controller="Home" asp-action="Delete" method="get" asp-route-id="@item.id" class="btn btn-danger btn-sm">Delete</a>
                                    <a asp-controller="Home" asp-action="Update" method="get" asp-route-id="@item.id"  class="btn btn-secondary btn-sm ">Update</a>
                                   
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <partial name="Partial"></partial>

